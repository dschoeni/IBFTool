<script>
function count(){
	var ul = document.getElementById('module_ol');
	var li = ul.getElementsByTagName('li').length;
	return li;
}

$(function() {
	$( "#available_modules li" ).draggable({
		appendTo: "body",
		helper: "clone"
	});
	
	$( "#used_modules ol" ).droppable({
		activeClass: "ui-state-default",
		hoverClass: "ui-state-hover",
		accept: ":not(.ui-sortable-helper)",
		drop: function( event, ui ) {
			$( this ).find( ".placeholder" ).remove();
			$( "<li class='questionnaire_available'>" 
					+ ui.draggable.text() + "<br /><textarea name='" + ui.draggable.attr("id") + "[]' class='admin_text'></textarea></li>" ).appendTo( this );
			}
	}).sortable({
		items: "li:not(.placeholder)",
		sort: function() {
			$( this ).removeClass( "ui-state-default" );
		}
	});

	$( "#trash" ).droppable({
		activeClass: "ui-state-default",
		hoverClass: "ui-state-hover",
		drop: function( event, ui ) {
			if(confirm('Dieses Modul wird in der jetzigen Konfiguration entfernt. Die Konfiguration wird dabei gel√∂scht und kann NICHT wiederhergestellt werden. Sind Sie sicher?')) {
				$(ui.draggable).remove();
			}
		}
	});

});
</script>



